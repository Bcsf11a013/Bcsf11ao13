<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/jqueryval")"></script>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <style>
        

        .navbar-nav > li > a {
            padding-top: 12px !important;
            padding-bottom: 0px !important;
        }

        .navbar {
            min-height: 20px !important;
           
        }
        .navbar-default {
           background-color:#b91c1c;
           border-color: #E7E7E7;
}
        #_login {
            padding-top: 4px !important;
             padding-bottom: 2px !important;
        }
    </style>
    <link href="../../Content/bootstrap.css" rel="stylesheet" />


    <link href="../../Content/shop-homepage.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->

    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>

        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/espond.min.js"></script>
    <![endif]-->

</head>
<body>

   
  
    @RenderSection("scripts", required: false)
    @RenderSection("s2", required: false)


    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">

        <div class="container" id="newcontainer">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">

                    <span class="sr-only">Toggle navigation</span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                </button>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav" id="adminnav">
                    <li>
                        @Html.ActionLink("Home", "index", "Home")
                    </li>

                    <li>
                        @Html.ActionLink("About", "About", "Home")

                    </li>
                    <li>
                        @Html.ActionLink("Contact Us", "Contact_us", "Home")

                    </li>
                      <li>
                          @{   var b = Session["Id"] as string; 
                                
                               <a href="/Home/ViewCart/?uid=@b">My Cart</a>
                          }
                    </li>
                    
                    </ul>
                    @{
                        var a = Session["name"] as string;
                        if (a != null)
                        {
                           
                                  <div class="pull-right" id="_login">
                                <a data-toggle="modal" data-target="#myModal" class="btn btn-danger btn-sm pull-right">Logout</a>
                                </div>
                        <script>
                            $('#_logout').remove();
                        </script>
                        }
                        else
                        {
                               <script>
                                   $('#_login').remove;
                               </script>
                                   <div class="pull-right" id="_logout">
                            <a href="/Home/signin" class="btn btn-danger btn-sm pull-right">Login</a>
                            </div>
                        }
                    }
                      
            </div>
            <!-- /.navbar-collapse -->
        </div>
    </nav>

    <div class="container">

        <div class="row">

            <div class="col-md-3" id="sticky">

                <p class="lead"><span style="color: brown;">Mr.Brand</span></p>

                <div class="list-group">

                    @Html.ActionLink("T Shirts", "tshirt", "Category", new { namhg = "hjh" }, new { @class = "list-group-item" })
                    
                    @Html.ActionLink("Jeans", "Jeans", "Category", new { namhg = "hjh" }, new { @class = "list-group-item" })

                    @Html.ActionLink("Dress Pants", "DressPant", "Category", new { namhg = "hjh" }, new { @class = "list-group-item" })

                    @Html.ActionLink("DressShirts", "Dressshirt", "Category", new { namhg = "hjh" }, new { @class = "list-group-item" })

                    @Html.ActionLink("Babies", "Baby", "Category", new { namhg = "hjh" }, new { @class = "list-group-item" })


                </div>

            </div>

            <div class="col-md-9">

                <div class="row ">

                    <div id="som" class="col-md-12">
                        @RenderBody()
                    </div>

                </div>



            </div>

        </div>

    </div>
    <!-- /.container -->


    <div class="container">

        <!-- Footer -->

        <footer class="panel-footer">

            <div class="row">

                <div class="col-lg-12">

                    <p>Copyright &copy; Mr.Brand 2015</p>

                </div>

            </div>

        </footer>

    </div>
    <!-- /.container -->
    



    

</body>
</html>
